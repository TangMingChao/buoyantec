<%= render partial: "about_bg" %>
<div class="container cases_content">
	<div class="row">
		<%= render partial: "us_left_nav" %>
		<div class="col-md-9">
			<div class="content">
				<div class="right-head">
					<ul  class="nav nav-pills">
						<li>
							<%= image_tag "news_nav_icon.png"%>
							<span>当前位置：</span>
						</li>
						<li>
							<ol class="breadcrumb">
								<li><%= link_to("首页", root_path) %></li>
								<li ><%= link_to("关于我们", company_abouts_path) %></li>
								<li class="active">招聘信息</li>
							</ol>
						</li>
					</ul>
				</div> 
				<div class="right-body job_content">
					<div class="row job_list ">
						<% if  @recruits.blank? %>
						<strong>暂时没有招聘信息!</strong>
						<% else %>

						<div class="panel-group col-md-6" id="accordion" role="tablist" aria-multiselectable="true">
							<% @recruits.each do |recruit|%>
							<div class="panel panel-default">
								<div class="panel-heading  job-title" role="tab" id="heading<%= recruit.id %>">
									<h4 class="panel-title">
										<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= recruit.id %>" aria-expanded="true" aria-controls="collapse<%= recruit.id %>">
											<span><%= recruit.position %></span><span class="pull-right" >发布时间：<%= Time.now.strftime "%F"%></span>
										</a>
									</h4>
								</div>
								<div id="collapse<%= recruit.id %>" class="panel-collapse collapse" role="tabpanel" aria-expanded="false" aria-labelledby="heading<%= recruit.id %>">
									<div class="panel-body">
										<%= raw recruit.content %>
									</div>
								</div>
							</div>
							<% end %>
						</div>

