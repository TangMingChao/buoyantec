<div class="container reports">
	<div class="home-title text-center">
		<h4>新闻咨询</h4>
		<%= image_tag "home_page_2.png", class:"home-title-icon"%>
	</div>
	<table class="table table-hover">			
		<tbody>
			<% @firms.each do |report|%>
				<tr>
					<td class="report-time">
						<div class="report-day"><%= report.created_at.strftime "%d"%></div>
						<span><%= report.created_at.strftime "%Y-%m"%></span>
					</td>
					<td class="report-img text-left">
						<%= image_tag( report.image .present? ? report.image.photo(:news) : "index-reports1.jpg")%>
					</td>
					<td class="text-left">
						<h4><%= link_to "#{report.title}", report_path(report) %></h4>
						<div class="report-info"><%= sanitize(report.content, tags: %w(span), attributes: %w(href)) %></div>
					</td>
				</tr>
			<% end %>
			<% @trades.each do |report|%>
				<tr>
					<td class="report-time">
						<div class="report-day"><%= report.created_at.strftime "%d"%></div>
						<span><%= report.created_at.strftime "%Y-%m"%></span>
					</td>
					<td class="report-img text-left">
						<%= image_tag( report.image .present? ? report.image.photo(:news) : "index-reports1.jpg")%>
					</td>
					<td class="text-left">
						<h4><%= link_to "#{report.title}", report_path(report) %></h4>
						<div class="report-info"><%= sanitize(report.content,tags: %w(span), attributes: %w(href)) %></div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div class="text-center">
		<%= link_to reports_path do %>
			<h5 class="report-more">
				查看更多 <span><%= image_tag "home_page_3.png"%></span>
			</h5>
		<% end %>
	</div>
	<div class="home-ad">
		<%= image_tag "home_ad.png", width:"100%"%>
	</div>
</div>